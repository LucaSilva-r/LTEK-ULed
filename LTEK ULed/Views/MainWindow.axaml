<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LTEK_ULed.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LTEK_ULed.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LTEK_ULed.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LTEK_ULed"
		MinHeight="720"
		MinWidth="1280"
		>


	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<StackPanel VerticalAlignment="Center" Spacing="10">
			<Border Padding="10" BorderThickness="2" BorderBrush="{DynamicResource BackgroundBrush}">

				<StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock Margin="0,0,10,0" Text="Status" FontSize="24" FontWeight="Bold"></TextBlock>
						<CheckBox VerticalAlignment="Center" x:CompileBindings="False" IsChecked="{Binding debug}" IsCheckedChanged="DebugChanged" >Debug?</CheckBox>
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<!--Cabinet-->
						<Border Padding="5" BorderThickness="1" BorderBrush="{DynamicResource BackgroundBrush}">
							<StackPanel>
								<TextBlock Text="Cabinet" HorizontalAlignment="Center" FontWeight="Bold">
								</TextBlock>
								<Grid HorizontalAlignment="Center">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33"/>
										<ColumnDefinition Width="32"/>
										<ColumnDefinition Width="32"/>
										<ColumnDefinition Width="33"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="33"/>
										<RowDefinition Height="32"/>
										<RowDefinition Height="33"/>
										<RowDefinition Height="33"/>
										<RowDefinition Height="33"/>

									</Grid.RowDefinitions>

									<Rectangle
										x:Name="mUpLeft"
										Grid.Column="0" Grid.Row="0"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
										
									<Rectangle
										x:Name="mUpRight"
										Grid.Column="3" Grid.Row="0"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										x:Name="mDownLeft"
										Grid.Column="0" Grid.Row="2"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										x:Name="mDownRight"
										Grid.Column="3" Grid.Row="2"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										x:Name="bassLeft"
										Grid.Column="0" Grid.Row="3" Grid.RowSpan="2"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="60"/>
									<Rectangle
										x:Name="bassRight"
										Grid.Column="3" Grid.Row="3" Grid.RowSpan="2"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="60"/>
								</Grid>
							</StackPanel>
						</Border>

						<!--Player 1-->
						<Border  x:Name="player1" Padding="5" BorderThickness="1" BorderBrush="{DynamicResource BackgroundBrush}">
							<StackPanel>
								<TextBlock Text="Player 1" HorizontalAlignment="Center" FontWeight="Bold">
								</TextBlock>
								<TextBlock Text="Combo: ">
									<TextBlock Text="100" FontWeight="Bold"></TextBlock>
								</TextBlock>
								<TextBlock Text="Precision: ">
									<TextBlock Text="100" FontWeight="Bold"></TextBlock>
									<TextBlock Text="%" FontWeight="Bold"></TextBlock>
								</TextBlock>
								<Grid HorizontalAlignment="Center">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33"/>
										<ColumnDefinition Width="32"/>
										<ColumnDefinition Width="33"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="33"/>
										<RowDefinition Height="32"/>
										<RowDefinition Height="33"/>
									</Grid.RowDefinitions>


									<Rectangle
										Grid.Column="0" Grid.Row="0"
										x:Name="g05"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="1" Grid.Row="0"
										x:Name="g03"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="2" Grid.Row="0"
										x:Name="g06"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="0" Grid.Row="1"
										x:Name="g01"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="1" Grid.Row="1"
										x:Name="g07"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="2" Grid.Row="1"
										x:Name="g02"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="0" Grid.Row="2"
										x:Name="g08"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="1" Grid.Row="2"
										x:Name="g04"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="2" Grid.Row="2"
										x:Name="g09"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
								</Grid>
							</StackPanel>

						</Border>
						<Border  x:Name="player2" Padding="5" BorderThickness="1" BorderBrush="{DynamicResource BackgroundBrush}">
							<StackPanel>
								<TextBlock Text="Player 2" HorizontalAlignment="Center" FontWeight="Bold">
								</TextBlock>
								<TextBlock Text="Combo: ">
									<TextBlock Text="100" FontWeight="Bold"></TextBlock>
								</TextBlock>
								<TextBlock Text="Precision: ">
									<TextBlock Text="100" FontWeight="Bold"></TextBlock>
									<TextBlock Text="%" FontWeight="Bold"></TextBlock>
								</TextBlock>
								<Grid HorizontalAlignment="Center">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33"/>
										<ColumnDefinition Width="32"/>
										<ColumnDefinition Width="33"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="33"/>
										<RowDefinition Height="32"/>
										<RowDefinition Height="33"/>
									</Grid.RowDefinitions>


									<Rectangle
										Grid.Column="0" Grid.Row="0"
										x:Name="g14"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="1" Grid.Row="0"
										x:Name="g12"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="2" Grid.Row="0"
										x:Name="g15"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="0" Grid.Row="1"
										x:Name="g10"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="1" Grid.Row="1"
										x:Name="g16"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="2" Grid.Row="1"
										x:Name="g11"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="0" Grid.Row="2"
										x:Name="g17"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="1" Grid.Row="2"
										x:Name="g13"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
									<Rectangle
										Grid.Column="2" Grid.Row="2"
										x:Name="g18"
										Fill="{DynamicResource BackgroundBrush}"
										Width="30"
										Height="30"/>
								</Grid>
							</StackPanel>
						</Border>
					</StackPanel>
				</StackPanel>
			</Border>
		</StackPanel>

		<StackPanel Grid.Column="1" VerticalAlignment="Center">
			<Grid Width="370" Height="370" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition></RowDefinition>
					<RowDefinition></RowDefinition>
					<RowDefinition></RowDefinition>
				</Grid.RowDefinitions>

				<Button Grid.Row="2"
						Grid.Column="1"
						Name="down"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF128;"/>

				<Button Grid.Row="1"
						Grid.Column="0"
						Name="left"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF12F;"/>

				<Button Grid.Row="1"
						Grid.Column="2"
						Name="right"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF138;"/>

				<Button Grid.Row="0"
						Grid.Column="1"
						Name="up"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF148;"/>

				<Button Grid.Row="0"
						Grid.Column="0"
						Name="upleft"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF13F;"/>

				<Button Grid.Row="0"
						Grid.Column="2"
						Name="upright"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF144;"/>

				<Button Grid.Row="2"
						Grid.Column="0"
						Name="bottomleft"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF11E;"/>

				<Button Grid.Row="2"
						Grid.Column="2"
						Name="bottomright"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF123;"/>

				<Button Grid.Row="1"
						Grid.Column="1"
						Name="center"
						Width="100"
						Height="100"
						FontSize="50"
						FontFamily="{StaticResource BootstrapIcons}"
						Content="&#xF14D;"/>
			</Grid>

			<Button Click="SettingsClicked"
					HorizontalAlignment="Right"
					Margin="20"
					CornerRadius="50"
					Width="50" Height="50"
					FontSize="20"
					FontFamily="{StaticResource BootstrapIcons}"
					Content="&#xF3E2;"/>
		</StackPanel>
	</Grid>


	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary x:Key='Light'>
					<SolidColorBrush x:Key='BackgroundBrush'>LightGray</SolidColorBrush>
				</ResourceDictionary>
				<ResourceDictionary x:Key='Dark'>
					<SolidColorBrush x:Key='BackgroundBrush'>White</SolidColorBrush>
				</ResourceDictionary>
			</ResourceDictionary.ThemeDictionaries>
		</ResourceDictionary>
	</Window.Resources>
</Window>
