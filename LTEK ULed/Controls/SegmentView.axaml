<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LTEK_ULed.Controls.SegmentView"
             xmlns:shadui="clr-namespace:ShadUI.Controls;assembly=ShadUI">
	<shadui:Card Padding="10" BorderBrush="{DynamicResource BackgroundBrush}" BorderThickness="1" CornerRadius="10" Margin="5">

		<shadui:Card.Header>
			<StackPanel Orientation="Horizontal">
				<shadui:CardTitle x:CompileBindings="False" Content="{Binding $parent[2].SegmentName}"/>
				<shadui:CardTitle x:CompileBindings="False" Content="{Binding $parent[2].SegmentLength}"/>
			</StackPanel>

		</shadui:Card.Header>
		<StackPanel>
			<WrapPanel x:Name="LedContainer">

			</WrapPanel>
		</StackPanel>
	</shadui:Card>
</UserControl>
