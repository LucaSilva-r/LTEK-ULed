<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="LTEK_ULed.Controls.EnumButton">
	<StackPanel>
		<Button
		Classes="Outline"
		mc:Ignorable="d"
		Padding="10,1,10,3"
		Click="Button_Click" MinWidth="100">
			<Button.ContextMenu>
				<ContextMenu x:Name="menu" Closed="Menu_Closed" CornerRadius="{DynamicResource MdCornerRadius }" Background="{DynamicResource PrimaryForegroundColor}" Padding="5" />
			</Button.ContextMenu>
			<Button.Content>
				<TextBlock x:Name="buttonLabel" TextWrapping="Wrap"/>
			</Button.Content>
		</Button>
	</StackPanel>

</UserControl>
